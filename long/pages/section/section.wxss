/* pages/section/section.wxss */
.page {
  background-color: #F8F6F7;
  height: 100vh;
}
.title{
  width: 100%;
  height: 40px;
  box-sizing: border-box;
  background-color: #ffffff;
  line-height: 40px;
  font-size: 14px;
  padding-left: 15px;
  color: #666;
}

.list-box {
  width: 100%;
  box-sizing: border-box;
}

.list-title {
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 40px;
  font-size: 15px;
  color: #f66;
  background-color: #FFEBEB;
}

.list-item {
  display: flex;
  justify-content: space-around;
  border-bottom: 1px #dfdfdf solid;
  align-items: center;
  height: 40px;
  font-size: 14px;
  color: #333;
  background-color: #ffffff;
}

.list-title text{
  flex: 1;
  text-align: center;
}

.list-item text {
  flex: 1;
  text-align: center;
}